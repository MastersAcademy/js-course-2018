      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "editorconfig": "^0.15.2",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "lint-staged": "^8.0.4",
    "stylelint": "^9.7.1"
  },
  "devDependencies": {
    "husky": "^1.1.3"
  }
}
